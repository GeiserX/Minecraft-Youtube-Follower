# Minecraft Bot Configuration
# Your Minecraft Java Edition username (Microsoft account)
MINECRAFT_USERNAME=your_bot_username

# Minecraft Server Configuration
SERVER_HOST=your_server_ip
SERVER_PORT=25565
SPECTATOR_PORT=3000

# Streaming Configuration
# Choose one: youtube or twitch
STREAM_PLATFORM=youtube

# YouTube Streaming Key (get from YouTube Studio > Go Live > Stream)
YOUTUBE_STREAM_KEY=your_youtube_stream_key

# Twitch Streaming Key (get from Twitch Creator Dashboard > Settings > Stream)
TWITCH_STREAM_KEY=your_twitch_stream_key

# Display/Video Settings
DISPLAY_WIDTH=1920
DISPLAY_HEIGHT=1080

# Audio Mixing Configuration
# Voice chat volume multiplier (higher = louder voice)
VOICE_VOLUME_GAIN=2.0
# Game music volume multiplier (lower = quieter game music)
GAME_MUSIC_VOLUME_GAIN=0.5

# Mumble Server Configuration
MUMBLE_PORT=64738
MUMBLE_SUPERUSER_PASSWORD=changeme

# Azure Authentication (Optional)
# If you registered an Azure app, provide the Client ID here
# Leave empty to use default authentication (may require proper Azure app setup)
# See docs/AZURE_APP_SETUP.md for Azure app registration instructions
AZURE_CLIENT_ID=
